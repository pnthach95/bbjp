{
  "extends": "@react-native/typescript-config",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "index.js",
    "react-native.config.js",
    "ReactotronConfig.js",
    "tailwind.config.js",
    "scripts/**/*",
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Completeness */
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "verbatimModuleSyntax": true,
  }
}
